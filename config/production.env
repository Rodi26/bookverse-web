# Production Environment Configuration for BookVerse Web

# OIDC Authentication Configuration
OIDC_AUTHORITY=https://auth.bookverse.com
OIDC_CLIENT_ID=bookverse-web-prod
OIDC_SCOPE=openid profile email bookverse:api

# Service Base URLs (will be replaced by build process)
INVENTORY_BASE_URL=${INVENTORY_SERVICE_URL}
RECOMMENDATIONS_BASE_URL=${RECOMMENDATIONS_SERVICE_URL}
CHECKOUT_BASE_URL=${CHECKOUT_SERVICE_URL}

# Production Settings
DEVELOPMENT_MODE=false
AUTH_ENABLED=true
DEBUG_MODE=false
